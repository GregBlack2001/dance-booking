{{<layouts/main}}
{{$content}}
<section class="hero-section py-5 bg-light">
  <div class="container">
    <div class="row align-items-center">
      <div class="col-lg-6">
        <h1 class="display-4 fw-bold">Find Your Perfect Dance Class</h1>
        <p class="lead">Discover a wide range of dance classes and improve your skills with our experienced instructors.</p>
        <div class="d-grid gap-2 d-md-flex justify-content-md-start">
          <a href="/courses" class="btn btn-primary btn-lg px-4 me-md-2">Browse Courses</a>
          <a href="/auth/register" class="btn btn-outline-secondary btn-lg px-4">Sign Up</a>
        </div>
      </div>
      <div class="col-lg-6">
        <img src="https://via.placeholder.com/600x400" alt="Dance Class" class="img-fluid rounded shadow">
      </div>
    </div>
  </div>
</section>

<section class="featured-courses py-5">
  <div class="container">
    <h2 class="text-center mb-4">Featured Courses</h2>
    <div class="row">
      {{#courses}}
      <div class="col-md-4 mb-4">
        <div class="card h-100 shadow-sm">
          {{#imageUrl}}
          <img src="{{imageUrl}}" class="card-img-top" alt="{{title}}">
          {{/imageUrl}}
          {{^imageUrl}}
          <img src="https://via.placeholder.com/300x200?text={{title}}" class="card-img-top" alt="{{title}}">
          {{/imageUrl}}
          <div class="card-body">
            <h5 class="card-title">{{title}}</h5>
            <p class="card-text">{{description}}</p>
            <div class="d-flex justify-content-between align-items-center">
              <small class="text-muted">Level: {{level}}</small>
              <a href="/courses/{{_id}}" class="btn btn-sm btn-primary">View Details</a>
            </div>
          </div>
        </div>
      </div>
      {{/courses}}
      {{^courses}}
      <div class="col-12 text-center">
        <p>No courses available at the moment.</p>
      </div>
      {{/courses}}
    </div>
    <div class="text-center mt-4">
      <a href="/courses" class="btn btn-outline-primary">View All Courses</a>
    </div>
  </div>
</section>

<section class="upcoming-classes py-5 bg-light">
  <div class="container">
    <h2 class="text-center mb-4">Upcoming Classes</h2>
    <div class="row">
      {{#upcomingClasses}}
      <div class="col-md-6 col-lg-4 mb-4">
        <div class="card h-100 shadow-sm">
          <div class="card-body">
            <h5 class="card-title">{{title}}</h5>
            <h6 class="card-subtitle mb-2 text-muted">{{course.title}}</h6>
            <p class="card-text">
              <i class="far fa-calendar-alt"></i> {{dateFormatted}}<br>
              <i class="far fa-clock"></i> {{timeRange}}<br>
              <i class="fas fa-map-marker-alt"></i> {{location}}<br>
              <i class="fas fa-user"></i> {{instructor}}
            </p>
            <div class="d-flex justify-content-between align-items-center">
              <small class="text-muted">Level: {{course.level}}</small>
              <a href="/courses/class/{{_id}}" class="btn btn-sm btn-primary">View Details</a>
            </div>
          </div>
        </div>
      </div>
      {{/upcomingClasses}}
      {{^upcomingClasses}}
      <div class="col-12 text-center">
        <p>No upcoming classes at the moment.</p>
      </div>
      {{/upcomingClasses}}
    </div>
    <div class="text-center mt-4">
      <a href="/courses/upcoming/classes" class="btn btn-outline-primary">View All Upcoming Classes</a>
    </div>
  </div>
</section>
{{/content}}
{{/layouts/main}}