{{<layouts/main}}
{{$content}}
<div class="error-page">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-8 text-center">
        <div class="error-code">403</div>
        <h1 class="display-4">Access Denied</h1>
        <p class="lead error-message">{{message}}</p>
        <p>You do not have permission to access this page. Please log in with the appropriate credentials.</p>
        <div class="mt-4">
          <a href="/" class="btn btn-primary">Go to Homepage</a>
          <a href="/auth/login" class="btn btn-outline-primary ms-2">Login</a>
        </div>
      </div>
    </div>
  </div>
</div>
{{/content}}
{{/layouts/main}}