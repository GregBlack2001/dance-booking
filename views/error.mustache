{{<layouts/main}}
{{$content}}
<div class="error-page">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-8 text-center">
        <div class="error-code">500</div>
        <h1 class="display-4">Server Error</h1>
        <p class="lead error-message">{{message}}</p>
        <p>Sorry, something went wrong on our servers. We're working on fixing the issue.</p>
        {{#error}}
        <div class="card mt-4">
          <div class="card-header bg-danger text-white">
            Error Details
          </div>
          <div class="card-body">
            <pre class="text-start">{{error.stack}}</pre>
          </div>
        </div>
        {{/error}}
        <div class="mt-4">
          <a href="/" class="btn btn-primary">Go to Homepage</a>
          <a href="javascript:history.back()" class="btn btn-outline-secondary ms-2">Go Back</a>
        </div>
      </div>
    </div>
  </div>
</div>
{{/content}}
{{/layouts/main}}